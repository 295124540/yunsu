<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="center">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="105dp"
        android:layout_weight="3"
        android:orientation="vertical"
        android:gravity="center_vertical">
    <ImageView
        android:id="@+id/img_recommend"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:scaleType="centerCrop"
        android:src="@drawable/chen"/>
        </LinearLayout>

    <LinearLayout
        android:layout_width="1dp"
        android:layout_height="105dp"
        android:layout_weight="4"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_recommend_pname"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="@string/app_name"
            android:textColor="@color/black"
            android:layout_margin="5dp"
            android:textSize="17sp"
            android:singleLine="true"
            android:ellipsize="end"
            />
        <TextView
            android:id="@+id/tv_recommend_describe"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="@string/app_name"
            android:textColor="@color/gray"
            android:textSize="15sp"
            android:layout_margin="5dp"
            android:singleLine="true"
            android:ellipsize="end"/>
        <TextView
            android:id="@+id/tv_recommend_price"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="@string/app_name"
            android:textColor="@color/yellow_f80"
            android:textSize="16sp"
            android:layout_margin="5dp"
            android:singleLine="true"
            android:ellipsize="end"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="105dp"
        android:layout_weight="2"
        android:orientation="vertical"
        android:gravity="center">
    <Button
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:background="@drawable/button_yuanjiao_blue"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:text="预定"/>
    </LinearLayout>


</LinearLayout>
